{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "npx prisma generate && npm run build",
  "crons": [
    {
      "path": "/api/cron/update-stock-prices",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/check-notifications",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/create-snapshot",
      "schedule": "0 0 1,15 * *"
    }
  ]
}
